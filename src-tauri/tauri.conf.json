{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GameVault",
  "version": "2.0.0",
  "identifier": "com.ranitbhowmick.gamevault",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GameVault",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "center": true,
        "visible": true,
        "focus": true
      },
      {
        "label": "overlay",
        "title": "GameVault Overlay",
        "url": "/overlay",
        "width": 420,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false,
        "center": false,
        "focus": false,
        "shadow": false
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Ranit Bhowmick",
    "copyright": "Copyright 2026 Ranit Bhowmick. All rights reserved.",
    "shortDescription": "The ultimate game save manager",
    "longDescription": "GameVault is a beautiful, modern game save manager. Backup, restore, and organize your game saves with ease. Features include screenshot capture, key remapping, macros, AI chat overlay, and more.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:gamevault.db"]
    }
  }
}
